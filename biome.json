{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUndeclaredVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "globals": ["describe", "expect", "test"],
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "./main.js",
      "./coverage/**",
      "./test/coverage/**",
      "./.idea/**",
      "**/*.css",
      "**/*.html"
    ]
  }
}
