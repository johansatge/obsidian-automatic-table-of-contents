{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUndeclaredVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "javascript": {
    "globals": ["describe", "expect", "test"],
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["src/**", "test/*.ts", "build.ts", "*.json", "!!**/coverage"]
  }
}
